<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="16dp"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/location_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_location" />

    <com.tendercut.customview.MyTextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="35dp"
        android:layout_toRightOf="@id/location_iv"
        customfont:tv_font_name="@string/ubuntu_regular"
        android:text="@string/adress_dummy"
        android:textColor="@color/colorBlackRegular"
        android:textSize="12sp" />

    <!--for provideing better touch effect on edit button Im using a layout-->
    <RelativeLayout
        android:id="@+id/edit_rl"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/edit_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/address_tv"
        android:layout_marginTop="16dp"
        android:background="@color/colorBlackRegular" />
</RelativeLayout>