<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/text_hint</item>
        <item name="android:colorFocusedHighlight">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    //overflow menu style
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/grey_800</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>



</resources>
